{
  "name": "mongoose-ref-promises",
  "version": "1.0.0",
  "main": "lib/index.js",
  "description": "A mongoose plugin which adds promise-based population virtual properties to your Models",
  "homepage": "https://github.com/yamadapc/mongoose-ref-promises",
  "bugs": "https://github.com/yamadapc/mongoose-ref-promises/issues",
  "keywords": [
    "mongoose",
    "promises",
    "references",
    "relations"
  ],
  "author": {
    "name": "Pedro Yamada",
    "email": "tacla.yamada@gmail.com",
    "url": "github.com/yamadapc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yamadapc/mongoose-ref-promises"
  },
  "licenses": [
    {
      "type": "MIT"
    }
  ],
  "scripts": {
    "test": "mocha --require blanket -R mocha-spec-cov-alt",
    "test-html-cov": "mocha --require blanket -R html-cov > coverage.html"
  },
  "dependencies": {
    "bluebird": "^3.1.5",
    "lodash": "^4.0.1"
  },
  "devDependencies": {
    "blanket": "1.2.2",
    "mocha": "^2.1.0",
    "mocha-spec-cov-alt": "^1.1.0",
    "mongoose": "^4.3.7",
    "should": "latest"
  },
  "config": {
    "blanket": {
      "data-cover-never": "node_modules",
      "pattern": [
        "lib"
      ],
      "spec-cov": {
        "threshold": 80,
        "localThreshold": 80,
        "lcovOutput": "lcov"
      }
    }
  }
}
